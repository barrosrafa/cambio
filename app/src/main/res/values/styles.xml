<resources>

    <style name="Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_button</item>
        <item name="android:lineSpacingExtra">@dimen/linespacingextra_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/size_fixed_minimum</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/text_regular</item>
    </style>

    <style name="Button.DialogSpinnerItem">
        <item name="android:background">@color/background_light</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/text_light</item>
        <item name="android:textSize">@dimen/textsize_button_dialogspinner</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:minHeight">@dimen/height_dialogspinner_item</item>
    </style>

    <style name="ButtonSecondary" parent="Button">
        <item name="android:background">@drawable/selector_button_secondary</item>
        <item name="android:textColor">@color/text_button_secondary_active</item>
    </style>

    <style name="ButtonSecondary.Card">
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textSize">@dimen/textsize_xsmall</item>
        <item name="android:lineSpacingExtra">@dimen/linespacingextra_xsmall</item>
        <item name="android:fontFamily">@font/text_bold</item>
    </style>

    <style name="TextScreenTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textSize">@dimen/textsize_screentitle</item>
        <item name="android:lineSpacingExtra">@dimen/linespacingextra_screentitle</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:fontFamily">@font/text_extra_bold</item>
    </style>

    <style name="TextSubTitle" parent="TextScreenTitle">
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textSize">@dimen/textsize_subtitle</item>
        <item name="android:lineSpacingExtra">@dimen/linespacingextra_subtitle</item>
        <item name="android:layout_marginTop">@dimen/margin_xxsmall</item>
        <item name="android:fontFamily">@font/text_regular</item>
    </style>

    <style name="DialogFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="EditTextMain" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_input_large</item>
        <item name="android:textColor">@color/selector_edittext_text</item>
        <item name="android:paddingBottom">@dimen/padding_inputhint_medium</item>
        <!-- Cor do texto de marcação -->
        <item name="android:textColorHint">@color/text_main_alpha</item>
        <item name="colorControlNormal">@color/text_main_alpha</item>
        <item name="colorControlActivated">@color/text_main</item>
    </style>

    <style name="ToolbarView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/height_toolbar</item>
        <item name="android:background">@color/background_toolbar</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">@dimen/size_fixed_minimum</item>
        <item name="android:layout_height">@dimen/size_fixed_minimum</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_orange</item>
        <item name="android:textSize">@dimen/textsize_fixed_icon</item>
        <item name="android:fontFamily">@font/text_regular</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="IconButton" parent="Icon">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:textSize">@dimen/textsize_fixed_iconbutton</item>
        <item name="android:importantForAccessibility">yes</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:layout_marginStart">@dimen/margin_xxxsmall</item>
        <item name="android:layout_marginEnd">@dimen/margin_xxxsmall</item>
        <item name="android:layout_marginTop">@dimen/margin_xxsmall</item>
        <item name="android:textColor">@color/text_toolbar_title</item>
        <item name="android:textSize">@dimen/textsize_toolbar</item>
        <item name="android:lineSpacingExtra">@dimen/linespacingextra_toolbar</item>
        <item name="android:fontFamily">@font/text_regular</item>
    </style>

    <style name="DividerToolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_alpha</item>
        <item name="android:layout_marginTop">@dimen/margin_xxsmall</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintVertical_bias">1</item>
    </style>
    
    <style name="EditText">
    <item name="android:clipToPadding">false</item>
    <item name="android:paddingTop">@dimen/default_margin_8_dp</item>
    <item name="android:textAppearance">@style/Text.Large</item>
    <item name="android:textColor">@color/gray_252220</item>
    <item name="android:textColorHint">@color/gray_252220</item>

    <item name="titleTextAppearance">@style/EditText.Title</item>
    <item name="titleTextColor">@color/gray_252220</item>
    <item name="focusedTitleTextAppearance">@style/EditText.Title.Focused</item>
    <item name="focusedTitleTextColor">@color/gray_252220</item>
    <item name="errorTitleTextAppearance">@style/EditText.Error</item>
    <item name="lineHeight">@dimen/default_margin_8_dp</item>
    <item name="errorLineHeight">@dimen/default_margin_8_dp</item>
    <item name="lineColor">@color/gray_252220</item>
    <item name="disableLineColor">@color/gray_252220</item>
    <item name="focusedLineColor">@color/gray_252220</item>
    <item name="errorColor">@color/purple_531E6D</item>
    <item name="disabledBackground">@color/gray_252220</item>
  </style>

  <style name="EditText.Monetary">
    <item name="android:inputType">numberDecimal</item>
    <item name="android:hint">0.00</item>
    <item name="currencyLocale">en_US</item>
    <item name="android:textAppearance">@style/Number.Large</item>
    <item name="android:textColor">@color/gray_252220</item>
  </style>

  <style name="EditText.Monetary.Brazil">
    <item name="android:hint">0,00</item>
    <item name="currencyLocale">pt_BR</item>
  </style>

  <style name="EditText.Monetary.Paraguay">
    <item name="android:hint">0</item>
    <item name="currencyLocale">es_PY</item>
  </style>

  <style name="EditText.Monetary.Argentina">
    <item name="android:hint">0,00</item>
    <item name="currencyLocale">es_AR</item>
  </style>

  <style name="EditText.Monetary.Chile">
    <item name="android:hint">0</item>
    <item name="currencyLocale">es_CL</item>
  </style>

  <style name="EditText.Monetary.Colombia">
    <item name="android:hint">0</item>
    <item name="currencyLocale">es_CO</item>
  </style>

  <style name="EditText.Monetary.Uruguay">
    <item name="android:hint">0,00</item>
    <item name="currencyLocale">es_UY</item>
  </style>

  <style name="EditText.Error" parent="Text.Small">
    <item name="android:fontFamily">@font/text_bold</item>
    <item name="android:textColor">@color/purple_531E6D</item>
  </style>

  <style name="EditText.Title" parent="Text.Small">
    <item name="android:textColor">#56504c</item>
  </style>

  <style name="EditText.Title.Focused" parent="EditText.Title">
    <item name="android:fontFamily">@font/text_bold</item>
    <item name="android:textColor">@color/gray_252220</item>
  </style>

  <style name="EditText.Description" parent="Text.Small">
    <item name="android:textColor">@color/gray_252220</item>
    <item name="android:maxLines">3</item>
  </style>

    <style name="Text.Small" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/text_regular</item>
        <item name="android:textSize">@dimen/textsize_xsmall</item>
        <item name="android:textColor">@color/gray_252220</item>
        <item name="android:lineSpacingMultiplier">1.111</item>
    </style>

    <style name="Text.Large" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/text_regular</item>
        <item name="android:textSize">@dimen/default_text_18_sp</item>
        <item name="android:textColor">@color/gray_252220</item>
        <item name="android:lineSpacingMultiplier">1.043</item>
    </style>

    <style name="Number.Large" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/text_regular</item>
        <item name="android:textSize">@dimen/default_text_18_sp</item>
        <item name="android:textColor">@color/gray_252220</item>
        <item name="android:lineSpacingMultiplier">0.947</item>
    </style>

    <style name="Text.Icon" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/fonts_master_24px_v28</item>
    </style>

    <style name="Text.Icon.Medium">
        <item name="android:textSize">@dimen/default_text_24_sp</item>
    </style>

</resources>

